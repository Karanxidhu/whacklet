generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int    @id @default(autoincrement())
  chatId      String @unique
  wallets     Wallet[]
  defaultWallet Int
  tokens      Token[]
}

model Wallet {
  id          Int      @id @default(autoincrement())
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  name        String
  publicKey   String
  privateKey  String
  createdAt   DateTime @default(now())
}

model Token{
  id          Int      @id @default(autoincrement())
  user        User     @relation(fields: [userId], references: [id])
  userId      Int
  name        String
  mintAddress String
}
